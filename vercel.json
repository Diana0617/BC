{
  "version": 2,
  "buildCommand": "cd packages/shared && npm install && cd ../web-app && npm install && npm run build",
  "outputDirectory": "packages/web-app/dist",
  "installCommand": "npm install --prefix packages/shared && npm install --prefix packages/web-app",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://bc-16wt.onrender.com"
  }
}