{
  "buildCommand": "rm -rf packages/shared/node_modules packages/web-app/node_modules && cd packages/shared && npm install && cd ../web-app && npm install && npm run build",
  "outputDirectory": "packages/web-app/dist",
  "installCommand": "npm install --prefix packages/shared && npm install --prefix packages/web-app",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://bc-16wt.onrender.com",
    "FORCE_REBUILD": "2025-10-18-14-00"
  }
}