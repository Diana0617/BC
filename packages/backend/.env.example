# Configuración del servidor
NODE_ENV=development
PORT=5000

# URLs permitidas para CORS
WEB_URL=http://localhost:3000
APP_URL=http://localhost:3001

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beauty_control_dev
DB_USER=postgres
DB_PASSWORD=password

# Base de datos de pruebas
DB_NAME_TEST=beauty_control_test

# Configuración de Sincronización de BD
# DISABLE_SYNC=true para deshabilitar sincronización automática (RECOMENDADO en producción)
# FORCE_SYNC_DB=true para recrear toda la base de datos (SOLO desarrollo - BORRA DATOS)
# En producción, SIEMPRE usar DISABLE_SYNC=true y ejecutar migraciones manualmente
DISABLE_SYNC=true
FORCE_SYNC_DB=false

# JWT Secret (generar uno seguro para producción)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Cloudinary (para almacenamiento de archivos)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Configuración de pagos (opcional)
WOMPI_PUBLIC_KEY=your_wompi_public_key
WOMPI_PRIVATE_KEY=your_wompi_private_key
WOMPI_ENVIRONMENT=sandbox
WOMPI_EVENT_SECRET=your_wompi_event_secret_for_webhooks
WOMPI_API_URL=https://sandbox.wompi.co

# Rate limiting (opcional, valores por defecto)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# WhatsApp Business Platform (Meta for Developers)
# Obtener estas credenciales desde https://developers.facebook.com
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
WHATSAPP_CONFIG_ID=your_embedded_signup_config_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_webhook_verify_token_here
WHATSAPP_WEBHOOK_URL=https://your-backend-domain.com/api/webhooks/whatsapp

# Encryption key para tokens de WhatsApp (generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=generate_a_64_character_hex_string_here
# WhatsApp Business Platform (nuevo sistema multi-tenant)
# Generar clave con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WHATSAPP_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# Feature flag para activar el nuevo sistema de tokens encriptados
WHATSAPP_USE_NEW_TOKEN_SYSTEM=false
WHATSAPP_WEBHOOK_VERIFY_TOKEN=beauty_control_whatsapp_verify
WHATSAPP_APP_SECRET=your_whatsapp_app_secret_from_meta_dashboard
